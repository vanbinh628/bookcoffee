<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:gravity="center_vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="0px"
        android:layout_weight="1"
        android:gravity="center_vertical"

        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_buttn_border_green"
            android:text="1"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_order_name_info"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:text="Cappuchino [75% sugar, 50% ice]" />

    <TextView
        android:id="@+id/item_order_price"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingRight="@dimen/order_padding"
        android:text="$3.5"
        android:textAlignment="textEnd" />
</LinearLayout>