<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="140px"
    android:gravity="center_vertical"
    android:background="@drawable/shape_bottom_border"
    android:weightSum="14">
    <LinearLayout
        android:layout_width="0px"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="@drawable/shape_buttn_border_green"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="10"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cappuchino [75% sugar, 50% ice]"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_edit_2"
            android:textColor="@color/lightNavy"/>

    </LinearLayout>
    <TextView
        android:paddingRight="@dimen/order_padding"
        android:textAlignment="textEnd"
        android:layout_width="0px"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="$3.5"/>
</LinearLayout>